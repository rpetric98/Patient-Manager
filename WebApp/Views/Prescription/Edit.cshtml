@model WebApp.Models.PrescriptionVM
@{
    ViewData["Title"] = "Edit Prescription";
}

<h2>Edit Prescription</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MedicineName" class="control-label"></label>
        <input asp-for="MedicineName" class="form-control" />
        <span asp-validation-for="MedicineName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dosage" class="control-label"></label>
        <input asp-for="Dosage" class="form-control" />
        <span asp-validation-for="Dosage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
<div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</form>
