@model WebApp.Models.MedicalRecordVM
@{
    ViewData["Title"] = "Medical Record Details";
}

<h1>Medical Record Details</h1>

<div>
    <h4>Medical Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Disease Name
        </dt>
        <dd class="col-sm-10">
            @Model.DiseaseName
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Patient ID
        </dt>
        <dd class="col-sm-10">
            @Model.PatientId
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
